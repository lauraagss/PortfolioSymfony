{% extends 'base.html.twig' %}

{% block title %}Timeline index{% endblock %}

{% block body %}
    <h1>Timeline index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameTechnology</th>
                <th>Created_at</th>
                <th>Finish_at</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for timeline in timelines %}
            <tr>
                <td>{{ timeline.id }}</td>
                <td>{{ timeline.nameTechnology }}</td>
                <td>{{ timeline.createdAt ? timeline.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ timeline.finishAt ? timeline.finishAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ timeline.description }}</td>
                <td>
                    <a href="{{ path('timeline_show', {'id': timeline.id}) }}">show</a>
                    <a href="{{ path('timeline_edit', {'id': timeline.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('timeline_new') }}">Create new</a>
{% endblock %}
