{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="pd-parallax" datasrc="{{ asset('statics/images/projet2.jpg') }}"></div>
    <div class="text-center border border-light shadow p-5">
        <form action="{{ path('login') }}" method="post" class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">Veuillez-vous connecter</h1>

            <input type="text" id="username" name="_username" class="form-control" placeholder="Prénom" required autofocus value="{{ last_username }}">
            <input style="margin-top: 10px;" type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button style="margin-top: 10px;" class="btn btn-lg btn-dark btn-block" type="submit">Se connecter</button>
            {% if error %}
                <div class="alert alert-danger mt-4">
                    {{ error.messageKey | trans(error.messagedata, 'security')}}
                </div>
            {% endif %}
        </form>
    </div>
    <div class="pd-parallax" datasrc="{{ asset('statics/images/projet2.jpg') }}"></div>
    <section class="bg-dark shadow pt-3 pb-3">
        <footer class="text-center">
            <a class="btn btn-light btn-lg" href="index.php" role="button">retour à l'accueil</a>
