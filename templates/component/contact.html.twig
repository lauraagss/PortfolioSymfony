<section class="page-section pt-3 pb-3" id="contact">
    <div class="container">
        <h2 class=" text-secondary text-center mb-4">Contactez-moi</h2>
        {{ form_start(form,{'attr': {
            'class': 'text-center border border-light shadow p-5',
        }} ) }}

        <div class="form-row mb-4">
            <div class="col">
                {{ form_widget(form.name,{
                    'attr': {
                        'class': 'form-control',
